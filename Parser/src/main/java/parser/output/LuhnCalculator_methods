int calcLuhn(String input) {
        int sum = 0;
        int length = input.length();
        int parity = length % 2;
        for (int i = 0; i < length; i++) {
            char c = input.charAt(i);
            if (!Character.isDigit(c)) {
                continue;
            }
            int digit = Character.getNumericValue(c);
            if (i % 2 == parity) {
                digit *= 2;
                if (digit > 9) {
                    digit -= 9;
                }
            }
            sum += digit;
        }
        int checksum = 10 - (sum % 10);
        if (checksum == 10) {
            checksum = 0;
        }
        return checksum;        
    }

Boolean validateLuhn(String input) {
        int checksum = calcLuhn(input);
        return checksum == 0;
    }

